        }

        .fruit-display {
            background: linear-gradient(135deg, #fff5f5, #ffe8e8);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 25px;
            border: 3px dashed #ff6b6b;
            min-height: 250px;
            display: flex;
