            background: #fafbfc;
        }

        .answer-input:focus {
            outline: none;
            border-color: #ff6b6b;
            background: white;
            box-shadow: 0 0 20px rgba(255, 107, 107, 0.2);
        }

        .button-group {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .action-btn {
            background: linear-gradient(135deg, #26de81, #20bf6b);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1em;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(32, 191, 107, 0.3);
        }

        .skip-btn {
            background: linear-gradient(135deg, #ffa502, #ff6348);
        }

        .skip-btn:hover {
            box-shadow: 0 8px 20px rgba(255, 99, 72, 0.3);
        }

        .hint-btn {
            background: linear-gradient(135deg, #3742fa, #2f3542);
        }

        .hint-btn:hover {
            box-shadow: 0 8px 20px rgba(55, 66, 250, 0.3);
        }

        .feedback {
            margin: 20px 0;
            padding: 15px;
            border-radius: 12px;
            font-weight: bold;
            font-size: 1.2em;
            transition: all 0.5s ease;
            opacity: 0;
        }

        .feedback.show {
            opacity: 1;
            animation: feedbackPop 0.6s ease-out;
        }

        @keyframes feedbackPop {
            0% {
                transform: scale(0.8);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        .feedback.correct {
            background: linear-gradient(135deg, #26de81, #20bf6b);
            color: white;
        }

        .feedback.wrong {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
        }

        .result-screen {
            display: none;
            text-align: center;
        }

        .result-card {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
            padding: 35px;
            border-radius: 20px;
            margin-bottom: 25px;
        }

        .final-score {
            font-size: 3.5em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .score-text {
            font-size: 1.3em;
            opacity: 0.9;
        }

        .result-message {
            color: #ff6b6b;
            font-size: 1.4em;
            margin-bottom: 25px;
            font-weight: 600;
        }

        .final-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .final-stat {
            background: #f8f9ff;
            padding: 20px;
            border-radius: 15px;
        }

        .final-stat-value {
            font-size: 2em;
            font-weight: bold;
            color: #ff6b6b;
            margin-bottom: 5px;
        }

        .final-stat-label {
            color: #666;
            font-size: 0.9em;
        }

        @media (max-width: 768px) {
            .game-title {
                font-size: 2em;
            }
            
            .fruit-emoji {
                font-size: 6em;
            }
            
            .game-content {
                padding: 20px;
            }
            
