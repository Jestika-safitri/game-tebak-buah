<body>
    <div class="game-container">
        <div class="game-header">
            <h1 class="game-title">🍎 TEBAK BUAH</h1>
            <p class="game-subtitle">Ayo tebak nama buahnya!</p>
        </div>

        <div class="game-content">
            <!-- Start Screen -->
            <div class="start-screen" id="startScreen">
                <h2>Selamat Datang di Game Tebak Buah!</h2>
                <p>Lihat emoji buah dan tebak nama buahnya dengan benar. Semakin banyak benar, semakin tinggi skormu!</p>
                
                <div class="difficulty-selector">
                    <p style="margin-bottom: 15px; color: #666;"><strong>Pilih Tingkat Kesulitan:</strong></p>
                    <button class="difficulty-btn selected" onclick="selectDifficulty('mudah', this)">
                        😊 Mudah (10 Soal)
                    </button>
                    <button class="difficulty-btn" onclick="selectDifficulty('sedang', this)">
                        🤔 Sedang (15 Soal)
                    </button>
                    <button class="difficulty-btn" onclick="selectDifficulty('sulit', this)">
                        😤 Sulit (20 Soal)
                    </button>
                </div>
                
                <button class="btn" onclick="startGame()">🎮 Mulai Main</button>
            </div>

            <!-- Game Screen -->
            <div class="game-screen" id="gameScreen">
                <div class="game-stats">
                    <div class="stat-item">
                        <div class="stat-value" id="currentQuestion">1</div>
                        <div class="stat-label">Soal</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="currentScore">0</div>
                        <div class="stat-label">Skor</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="hintsLeft">3</div>
                        <div class="stat-label">Petunjuk</div>
                    </div>
                </div>

                <div class="fruit-display">
                    <div class="fruit-emoji" id="fruitEmoji">🍎</div>
                    <div class="fruit-hint" id="fruitHint">Buah merah yang manis...</div>
                </div>

                <input 
                    type="text" 
                    class="answer-input" 
                    id="answerInput" 
                    placeholder="Ketik nama buahnya di sini..."
                    onkeypress="handleKeyPress(event)"
                />

                <div class="button-group">
                    <button class="action-btn" onclick="checkAnswer()">
                        ✅ Jawab
                    </button>
                    <button class="action-btn hint-btn" onclick="showHint()" id="hintBtn">
                        💡 Petunjuk
                    </button>
                    <button class="action-btn skip-btn" onclick="skipQuestion()">
                        ⏭️ Lewati
                    </button>
                </div>

                <div class="feedback" id="feedback"></div>
            </div>

            <!-- Result Screen -->
            <div class="result-screen" id="resultScreen">
                <div class="result-card">
                    <div class="final-score" id="finalScore">0</div>
                    <div class="score-text">Skor Akhir</div>
                </div>

                <div class="result-message" id="resultMessage"></div>

                <div class="final-stats">
                    <div class="final-stat">
                        <div class="final-stat-value" id="finalCorrect">0</div>
                        <div class="final-stat-label">Benar</div>
                    </div>
                    <div class="final-stat">
                        <div class="final-stat-value" id="finalWrong">0</div>
                        <div class="final-stat-label">Salah</div>
                    </div>
                    <div class="final-stat">
                        <div class="final-stat-value" id="finalSkipped">0</div>
                        <div class="final-stat-label">Dilewati</div>
                    </div>
                    <div class="final-stat">
                        <div class="final-stat-value" id="finalAccuracy">0%</div>
                        <div class="final-stat-label">Akurasi</div>
                    </div>
                </div>

                <button class="btn" onclick="restartGame()">🔄 Main Lagi</button>
            </div>
        </div>
    </div>

    <script>
        // Database buah
        const fruits = [
            { emoji: "🍎", name: "apel", hint: "Buah merah atau hijau yang renyah", difficulty: "mudah" },
            { emoji: "🍌", name: "pisang", hint: "Buah kuning yang melengkung", difficulty: "mudah" },
            { emoji: "🍊", name: "jeruk", hint: "Buah bulat berwarna oranye", difficulty: "mudah" },
            { emoji: "🍇", name: "anggur", hint: "Buah kecil yang bergerombol", difficulty: "mudah" },
            { emoji: "🍓", name: "stroberi", hint: "Buah merah dengan bintik-bintik kecil", difficulty: "mudah" },
            { emoji: "🥝", name: "kiwi", hint: "Buah hijau dengan kulit berbulu", difficulty: "sedang" },
            { emoji: "🍑", name: "ceri", hint: "Buah merah kecil dengan tangkai", difficulty: "sedang" },
            { emoji: "🍒", name: "ceri", hint: "Buah merah kecil yang berpasangan", difficulty: "sedang" },
            { emoji: "🍅", name: "tomat", hint: "Buah merah yang sering dianggap sayuran", difficulty: "mudah" },
            { emoji: "🥭", name: "mangga", hint: "Buah tropis berwarna kuning-oranye", difficulty: "mudah" },
            { emoji: "🍍", name: "nanas", hint: "Buah dengan mahkota daun di atasnya", difficulty: "mudah" },
            { emoji: "🥥", name: "kelapa", hint: "Buah dengan tempurung keras", difficulty: "sedang" },
            { emoji: "🍈", name: "melon", hint: "Buah bulat dengan daging hijau atau oranye", difficulty: "sedang" },
            { emoji: "🍉", name: "semangka", hint: "Buah besar dengan kulit hijau bergaris", difficulty: "mudah" },
            { emoji: "🍋", name: "lemon", hint: "Buah kuning yang asam", difficulty: "sedang" },
            { emoji: "🍐", name: "pir", hint: "Buah hijau atau kuning berbentuk seperti bola lampu", difficulty: "sedang" },
            { emoji: "🥑", name: "alpukat", hint: "Buah hijau dengan daging lembut dan biji besar", difficulty: "sedang" },
            { emoji: "🍑", name: "persik", hint: "Buah berbulu dengan daging manis", difficulty: "sulit" },
            { emoji: "🫐", name: "blueberry", hint: "Buah kecil biru yang manis", difficulty: "sulit" },
            { emoji: "🥭", name: "pepaya", hint: "Buah tropis dengan biji hitam di tengah", difficulty: "sulit" }
        ];

        let currentFruit = null;
        let score = 0;
        let questionCount = 0;
        let correctAnswers = 0;
        let wrongAnswers = 0;
        let skippedQuestions = 0;
        let hintsUsed = 0;
        let totalHints = 3;
        let difficulty = 'mudah';
        let maxQuestions = 10;
        let gameQuestions = [];

        function selectDifficulty(level, button) {
            difficulty = level;
            
            // Remove selected class from all buttons
            document.querySelectorAll('.difficulty-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            // Add selected class to clicked button
            button.classList.add('selected');
            
            // Set max questions based on difficulty
            switch(level) {
                case 'mudah':
                    maxQuestions = 10;
                    totalHints = 3;
                    break;
                case 'sedang':
                    maxQuestions = 15;
                    totalHints = 2;
                    break;
                case 'sulit':
                    maxQuestions = 20;
                    totalHints = 1;
                    break;
            }
        }

        function startGame() {
            // Reset game state
            score = 0;
            questionCount = 0;
            correctAnswers = 0;
            wrongAnswers = 0;
            skippedQuestions = 0;
            hintsUsed = 0;
            
            // Filter fruits based on difficulty and create question pool
            let availableFruits = [];
            switch(difficulty) {
                case 'mudah':
                    availableFruits = fruits.filter(f => f.difficulty === 'mudah');
                    break;
                case 'sedang':
                    availableFruits = fruits.filter(f => f.difficulty === 'mudah' || f.difficulty === 'sedang');
                    break;
                case 'sulit':
                    availableFruits = [...fruits];
                    break;
            }
            
            // Shuffle and select fruits for the game
            gameQuestions = shuffleArray(availableFruits).slice(0, maxQuestions);
            
            document.getElementById('startScreen').style.display = 'none';
            document.getElementById('gameScreen').style.display = 'block';
            document.getElementById('hintsLeft').textContent = totalHints;
            
            nextQuestion();
        }

        function shuffleArray(array) {
            let shuffled = [...array];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        function nextQuestion() {
            if (questionCount >= maxQuestions) {
                endGame();
                return;
            }

            currentFruit = gameQuestions[questionCount];
            questionCount++;
            
            document.getElementById('fruitEmoji').textContent = currentFruit.emoji;
            document.getElementById('fruitHint').textContent = '🤔 Buah apakah ini?';
            document.getElementById('currentQuestion').textContent = `${questionCount}/${maxQuestions}`;
            document.getElementById('answerInput').value = '';
            document.getElementById('feedback').classList.remove('show');
            
            // Update hint button
            const hintBtn = document.getElementById('hintBtn');
            if (totalHints - hintsUsed <= 0) {
                hintBtn.disabled = true;
                hintBtn.style.opacity = '0.5';
                hintBtn.textContent = '💡 Petunjuk (0)';
            } else {
                hintBtn.disabled = false;
                hintBtn.style.opacity = '1';
                hintBtn.textContent = `💡 Petunjuk (${totalHints - hintsUsed})`;
            }
        }

        function checkAnswer() {
            const userAnswer = document.getElementById('answerInput').value.trim().toLowerCase();
            const feedback = document.getElementById('feedback');
            
            if (!userAnswer) {
                showFeedback('Masukkan jawaban terlebih dahulu!', 'wrong');
                return;
            }
            
            if (userAnswer === currentFruit.name.toLowerCase()) {
                // Correct answer
                let points = 100;
                if (difficulty === 'sedang') points = 150;
                if (difficulty === 'sulit') points = 200;
                
                score += points;
                correctAnswers++;
                showFeedback(`🎉 Benar! +${points} poin`, 'correct');
                
                setTimeout(nextQuestion, 2000);
            } else {
                // Wrong answer
                wrongAnswers++;
                showFeedback(`❌ Salah! Jawaban yang benar: ${currentFruit.name}`, 'wrong');
                
                setTimeout(nextQuestion, 3000);
            }
            
            document.getElementById('currentScore').textContent = score;
        }

        function showHint() {
            if (hintsUsed >= totalHints) return;
            
            hintsUsed++;
            document.getElementById('fruitHint').textContent = currentFruit.hint;
            document.getElementById('hintsLeft').textContent = totalHints - hintsUsed;
            
            const hintBtn = document.getElementById('hintBtn');
            if (totalHints - hintsUsed <= 0) {
                hintBtn.disabled = true;
                hintBtn.style.opacity = '0.5';
                hintBtn.textContent = '💡 Petunjuk (0)';
            } else {
                hintBtn.textContent = `💡 Petunjuk (${totalHints - hintsUsed})`;
            }
        }

        function skipQuestion() {
            skippedQuestions++;
            showFeedback(`⏭️ Dilewati! Jawabannya: ${currentFruit.name}`, 'wrong');
            
            setTimeout(nextQuestion, 2500);
        }

        function showFeedback(message, type) {
            const feedback = document.getElementById('feedback');
            feedback.textContent = message;
            feedback.className = `feedback ${type} show`;
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                checkAnswer();
            }
        }

        function endGame() {
            document.getElementById('gameScreen').style.display = 'none';
            document.getElementById('resultScreen').style.display = 'block';
            
            // Calculate accuracy
            const totalAnswered = correctAnswers + wrongAnswers;
            const accuracy = totalAnswered > 0 ? Math.round((correctAnswers / totalAnswered) * 100) : 0;
            
            // Update final stats
            document.getElementById('finalScore').textContent = score;
            document.getElementById('finalCorrect').textContent = correctAnswers;
            document.getElementById('finalWrong').textContent = wrongAnswers;
            document.getElementById('finalSkipped').textContent = skippedQuestions;
            document.getElementById('finalAccuracy').textContent = accuracy + '%';
            
            // Set result message
            let message = '';
            if (accuracy >= 90) {
                message = '🏆 Luar Biasa! Kamu Master Buah!';
            } else if (accuracy >= 75) {
                message = '🌟 Hebat! Pengetahuan buahmu sangat baik!';
            } else if (accuracy >= 60) {
                message = '👍 Bagus! Terus belajar ya!';
            } else if (accuracy >= 40) {
                message = '😊 Tidak buruk! Coba lagi untuk hasil lebih baik!';
            } else {
                message = '💪 Jangan menyerah! Mari belajar lebih banyak tentang buah!';
            }
            
            document.getElementById('resultMessage').textContent = message;
        }

        function restartGame() {
            document.getElementById('resultScreen').style.display = 'none';
            document.getElementById('startScreen').style.display = 'block';
        }

        // Initialize the game
        document.getElementById('answerInput').focus();
    </script>
</body>
</html>
